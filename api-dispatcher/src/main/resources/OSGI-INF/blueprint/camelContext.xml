<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xsi:schemaLocation="
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <cm:property-placeholder id="apiDispatcherProperties" persistent-id="al.koop.fuse-api-dispatcher.api-dispatcher" />

    <camelContext trace="false" xmlns="http://camel.apache.org/schema/blueprint" id="apiDispatcherContext">

        <endpoint
                uri="jetty:{{al.koop.api.dispatcher.endpoint.protocol}}://{{al.koop.api.dispatcher.endpoint.host}}:{{al.koop.api.dispatcher.endpoint.port}}{{al.koop.api.dispatcher.endpoint.uri}}?matchOnUriPrefix=true&amp;disableStreamCache=true"
                id="receiveApiMessageEndpoint"/>

        <route id="apiDispatcherRoute">
            <from uri="ref:receiveApiMessageEndpoint" />

        </route>

    </camelContext>

</blueprint>